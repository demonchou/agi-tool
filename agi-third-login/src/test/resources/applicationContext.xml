<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:aop="http://www.springframework.org/schema/aop"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/aop
	http://www.springframework.org/schema/aop/spring-aop-4.1.xsd      
	http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans-4.1.xsd    
	http://www.springframework.org/schema/context
	http://www.springframework.org/schema/context/spring-context-4.1.xsd">

    <description>Spring公共配置文件</description>

    <!-- 定义受环境影响易变的变量 -->
    <context:component-scan base-package="com.demonchou.agi.tool"/>
    
    <!-- 加载测试配置文件 -->
    <context:property-placeholder location="classpath:application.yml,classpath:application.properties" />

    <bean id="springContextHolder" class="com.demonchou.agi.tool.common.utils.AgiModuleSpringContextHolder"/>

</beans>